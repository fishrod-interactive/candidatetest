{% extends '::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
    {% block fos_user_content %}
        {% trans_default_domain 'FOSUserBundle' %}

        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
              class="form-signin fos_user_registration_register">
            <h1> Register!</h1>
            {{ form_widget(form) }}
            <div>
                <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}"/>
            </div>
        </form>
        <div class="form-signin">
        <h3>All ready registered?</h3>
        <a class="btn btn-primary"
           href="{{ path('fos_user_security_login') }}">
            {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
        </a>
        </div>
    {% endblock fos_user_content %}
{% endblock body %}
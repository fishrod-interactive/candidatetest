{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Wedding list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_wedding_view', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.slug }}</td>
                <td>
                <a href="{{ path('admin_wedding_view', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-eye-open"></span>
                </a>
                <a href="{{ path('admin_wedding_edit', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('admin_wedding_create') }}">
        Create a new entry
    </a>
    {% endblock %}

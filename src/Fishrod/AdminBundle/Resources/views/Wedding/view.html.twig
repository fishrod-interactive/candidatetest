{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Wedding</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-default" href="{{ path('admin_wedding') }}">
                Back to the list
            </a>
            <a class="btn btn-default" href="{{ path('admin_wedding_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </div>
        <div class="col-sm-2" style="display: inline-block">
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
